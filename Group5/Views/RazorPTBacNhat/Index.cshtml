@{
    var c = "";
    if (IsPost)
    {

        double a = double.Parse(Request["a"]);
        double b = double.Parse(Request["b"]);
        if (a == 0 && b == 0) { c = ("Vô số nghiệm"); }
        else if (a == 0) { c = "Vô nghiệm"; }
        else { c = (-b / a).ToString(); }
    }
}



